{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:tree-styles": "npx tailwindcss -i resources/css/tree-node.css -o resources/dist/tree-node.css --postcss --watch",
        "dev:media-styles": "npx tailwindcss -i resources/css/media-library.css -o resources/dist/media-library.css --postcss --watch",
        "dev:styles": "npm run dev:tree-styles && npm run dev:media-styles",
        "dev:scripts": "node bin/build.js --dev",
        "build:tree-styles": "npx tailwindcss -i resources/css/tree-node.css -o resources/dist/tree-node.css --postcss --minify",
        "build:media-styles": "npx tailwindcss -i resources/css/media-library.css -o resources/dist/media-library.css --postcss --minify",
        "build:styles": "npm run build:tree-styles && npm run build:media-styles",
        "build:scripts": "node bin/build.js",
        "dev": "npm run dev:styles && npm run dev:scripts",
        "build": "npm run build:styles && npm run build:scripts"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.4.14",
        "cssnano": "^6.0.1",
        "esbuild": "^0.19.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.26",
        "postcss-cli": "^10.1.0",
        "postcss-import": "^15.1.0",
        "postcss-nesting": "^12.0.0",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "tailwindcss": "^3.3.3"
    }
}
